script.
    $(document).ready(function() {
    $(".nav-tabs a").click(function() {
    $(this).tab('show');
    });
    });
    $('.edit').click(function() {
    var id = $(this).val();
    alert(id);
    $.post('/edit_trainer', {
    sno: id
    }, function(data, xhr) {
    var jsondata = JSON.stringify(data);
    var data1 = JSON.parse(jsondata);
    
   
   
    
    document.getElementById("name").innerHTML = data1[0].name;
    document.getElementById("contact").innerHTML = data1[0].contact;
  
    document.getElementById("areas").innerHTML = data1[0].areas;
   
    document.getElementById("image").src = data1[0].image; 
    document.getElementById("register").href = data1[0].register;
     });
    $('.find').show();
    });
    
    $('.del').click(function() {
    var id = $(this).val();
    //alert(id);
    $.post('/remove_trainer', {
    sno: id
    }, function(data, xhr) {
    location.reload();
    });
    });
