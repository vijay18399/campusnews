                    label(for='ex2') Areas of expertise:
                    input#ex2.form-control(name='areas', type='text')
                    
                    label(for='pwd') Register for course:
                    input#usr.form-control(type='text', name='register')
                    
                .pull-right
                  input.btn.btn-primary(type='submit')

     
         .card
            .card-block
              h4.card-title trainers
              .table-responsive
                table.table
                  thead
                    tr
                      th.hide Id
                      th Name
                      th contact
                      th Areas of expertise
                      th trainerid
                      th Register for course
                      th Edit
                      th image
                      th Delete
                      
                      
                      
                      
                  tbody
                    if trainers
                      each member in trainers
                        tr
                          td.hide #{member._id}
                          td #{member.name}
                          td #{member.contact}
                          td #{member.areas}
                          td #{member.trainerid}
                          td #{member.register}
                          
                          
                          td <img src="#{member.image}" alt="Trulli" width="50" height="50"> 
                          td
                            button.btn.btn-info.edit(data-toggle='modal', data-target='#myModal' value=member._id) Edit
                          td
                            button.btn.btn-danger.del(value=member._id) Remove
